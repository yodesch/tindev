<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div>
      <%= link_to root_path do  %>
        <span class="logo"><%= image_tag 'logo.svg' %></span>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if current_user %>
          <li class="nav-item active">
             <%= button_to "Me déconnecter", destroy_user_session_path, data: { turbo: false }, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item active">
             <%= link_to "Me connecter", user_session_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Créer un compte", new_user_registration_path(@user), class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
