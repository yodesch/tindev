<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div>
      <%= link_to root_path do  %>
        <span class="logo"><%= image_tag 'logo.svg' %></span>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if current_user %>
        <li class="nav-item">
          <%= link_to dashboard_path, class: "logoprofil" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          <% end %>
        </li>
          <li class="nav-item active">
             <%= button_to "Me déconnecter", destroy_user_session_path, data: { turbo: false }, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item active">
             <%= link_to "Me connecter", user_session_path(current_user), class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Créer un compte", new_user_registration_path(@user), class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
